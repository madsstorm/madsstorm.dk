require 'html-proofer'

desc "build and test website"
task :test do
  sh "bundle exec jekyll build"
  HTMLProofer.check_directory(
    "./_site",
    {
      :disable_external => true,
      :typhoeus => {
        :followlocation => true,
        :ssl_verifypeer => false,
        :ssl_verifyhost => 0,
        :headers => {
          'User-Agent' => 'html-proofer'
        }
      }
    }
  ).run
end
